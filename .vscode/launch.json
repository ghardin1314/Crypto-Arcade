  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Manage Tests",
      "type": "python",
      "request": "launch",
      "program": "manage.py",
      "args": ["test"],
      "console": "integratedTerminal",
      "cwd": "C:/Users/ghard/Documents/GitHub/TRX-Arcade/backend"
    },
    {
      "name": "Python: Manage Reset",
      "type": "python",
      "request": "launch",
      "program": "manage.py",
      "args": ["resetDB"],
      "console": "integratedTerminal",
      "cwd": "C:/Users/ghard/Documents/GitHub/TRX-Arcade/backend"
    },
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "./backend/run.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true
    },
    {
      "name": "truffle test",
      "type": "node",
      "request": "launch",
      "program": "C:/Users/ghard/AppData/Roaming/npm/node_modules/truffle/build/cli.bundled.js",
      "args": ["test"],
      "cwd": "${workspaceRoot}",
      "outFiles": ["${workspaceRoot}/test/**/*"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000/play",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
